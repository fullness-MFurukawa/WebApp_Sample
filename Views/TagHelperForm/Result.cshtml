@model SampleForm 
@{
    ViewData["Title"] = "HTML Formを生成するタグヘルパー"; 
    // PrefecturesId と一致する SelectListItem を検索（Valueは文字列なので ToString()）
    // 一致する項目があれば、その表示テキスト（都道府県名）を取得
    var selectedPref = Model.PrefecturesList
    .FirstOrDefault(p => p.Value == Model.PrefecturesId.ToString())
    ?.Text                                                      
    ?? "未選択";        
}
<h2>@ViewData["Title"]</h2>

<div class="d-flex justify-content-center mt-5">
    <table class="table table-bordered w-auto">
        <thead class="table-light">
            <tr>
                <th>項目</th>
                <th>入力値</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayNameFor(m => m.Name)</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(m => m.Age)</td>
                <td>@Model.Age</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(m => m.PrefecturesId)</td>
                <td>@selectedPref</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="d-flex justify-content-center">
    <form method="get">
        <button type="button" onclick="location.href='/FormSample/Back'">戻る</button>
    </form>
</div>