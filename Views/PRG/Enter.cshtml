@model PRGForm
@{
    ViewData["Title"] = "文字列の入力";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Submit" asp-controller="PRG" method="post">
    <div class="mb-3">
        <label asp-for="Text" class="form-label"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">文字数を計算</button>
</form>
