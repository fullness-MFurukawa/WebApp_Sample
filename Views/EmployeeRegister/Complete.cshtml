@model EmployeeRegisterForm
@{
        ViewData["Title"] = "従業員登録(完了)";
}
<h2 class="text-center mt-4">@ViewData["Title"]</h2>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-8 text-center">
            <div class="alert alert-success" role="alert">
                従業員情報の登録が完了しました。
            </div>
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <td class="fw-bold">@Html.DisplayNameFor(m => m.Name)</td>
                        <td>@Html.DisplayFor(m => m.Name)</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">@Html.DisplayNameFor(m => m.DeptName)</td>
                        <td>@Html.DisplayFor(m => m.DeptName)</td>
                    </tr>
                </tbody>
            </table>
            <a asp-action="Enter" asp-controller="EmployeeRegister" class="btn btn-primary mt-3">
                続けて登録する
            </a>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary mt-3 ms-2">
                ホームに戻る
            </a>
        </div>
    </div>
</div>