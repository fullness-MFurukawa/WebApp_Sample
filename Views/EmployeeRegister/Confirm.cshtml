    @model EmployeeRegisterForm
    @{
        ViewData["Title"] = "従業員登録(確認)";
    }
    <h2 class="text-center mt-4">@ViewData["Title"]</h2>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6 col-sm-8">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <td class="fw-bold">@Html.DisplayNameFor(m => m.Name)</td>
                            <td>@Html.DisplayFor(m => m.Name)</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">@Html.DisplayNameFor(m => m.DeptName)</td>
                            <td>@Html.DisplayFor(m => m.DeptName)</td>
                        </tr>
                    </tbody>
                </table>

                <form>
                    <input type="hidden" asp-for="Name" />
                    <input type="hidden" asp-for="DeptId" />
                    <input type="hidden" asp-for="DeptName" />
                    <div class="text-center mt-4">
                        <button type="submit"
                            formaction="@Url.Action("Register", "EmployeeRegister")"
                            formmethod="post"
                            class="btn btn-primary">登録</button>
                        <button type="submit"
                            formaction="@Url.Action("Back", "EmployeeRegister")"
                            formmethod="post"
                            class="btn btn-secondary">戻る</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
